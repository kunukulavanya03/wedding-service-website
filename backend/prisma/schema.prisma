model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  weddingEvents WeddingEvent[]
}

model WeddingEvent {
  id       String   @id @default(cuid())
  title    String
  date     DateTime
  time     String
  location String
  guestList String
  user     User     @relation(fields: [id], references: [id])
  rsvps    RSVP[]
}

model RSVP {
  id       String   @id @default(cuid())
  weddingEventId String
  guestName String
  attending Boolean
  weddingEvent WeddingEvent @relation(fields: [weddingEventId], references: [id])
}